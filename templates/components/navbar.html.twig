
{% block navbar %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('home') }}">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link {{ app.request.pathInfo == "/" ? "active"  : ""}}" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link {{ "about" in app.request.pathInfo == "/" ? "active"  : ""}}" href="{{ path('about') }}">About</a>
            <a class="nav-item nav-link {{ "Franck" in app.request.pathInfo == "/" ? "active"  : ""}}" href="{{ path('route_name', {name : 'Franck'}) }}">Aller vers Franck</a>
            <a class="nav-item nav-link {{ "Emilie" in app.request.pathInfo == "/" ? "active"  : ""}}" href="{{ path('route_name', {name : 'Emilie'}) }}">Aller vers Emilie</a>
        </div>
    </div>
</nav>
{% endblock %}